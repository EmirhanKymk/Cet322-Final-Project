@{
    ViewData["Title"] = "Kategori Güncelle";
}

<div class="row mb-4">
    <div class="col">
        <h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
    </div>
</div>

<div class="row mb-4">
    <div class="col-4">
        <form>
            <div class="mb-3">
                <label for="CategoryName" class="font-weight-bold">Kategori Adı</label>
                <input type="text" class="form-control" id="CategoryName" placeholder="@NameData.GetCompanyName()" value="@NameData.GetCompanyName()" />
            </div>

            <div class="mb-3">
                <label for="CategoryDesc" class="form-label">Kategori Açıklama</label>
                <textarea id="CategoryDesc" cols="3" class="form-control" placeholder="@TextData.GetSentence()">@TextData.GetSentence()</textarea>
            </div>

            <div>
                <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save mr-2"></i>Kaydet</button>
                <a class="btn btn-secondary btn-sm" asp-action="Index"><i class="fa fa-arrow-left mr-2"></i>Listeye Dön</a>
            </div>
        </form>
    </div>
</div>