@{
    ViewData["Title"] = "Beğendiklerim";
}

<div class="row mb-4">
    <div class="col">
        <h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
    </div>
</div>



<div class="row mb-4">
    <div class="col">
        <table class="table table-hover table-striped table-sm small">
            <thead>
                <tr>
                    <th>Kategori</th>
                    <th>Başlık</th>
                    <th class="text-center">Beğeni Adet</th>
                    <th class="text-center">Yorum Adet</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 10; i++)
                {
                    <tr>
                        <td>@NameData.GetCompanyName()</td>
                        <td>@TextData.GetSentence()</td>                      
                        <td class="text-center">@NumberData.GetNumber(1,100)</td>
                        <td class="text-center">@NumberData.GetNumber(1,100)</td>            
                        <td class="text-center">
                            <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#modal_notecomments">
                                <i class="fa fa-comments"></i></button>
                            <button type="button" data-bs-toggle="modal" data-bs-target="#modal_notedetail" class="btn btn-secondary btn-sm">
                                <i class="fa fa-info-circle"></i>
                            </button>
                        </td>   
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

