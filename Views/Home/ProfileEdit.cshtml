@{
    ViewData["Title"] = "Profil Düzenle";
}

<div class="row p-3">
    <div class="col">
        <h3 class="display-4 border-bottom">Kullanıcı Hesabı Düzenle</h3>
    </div>
</div>

<div class="row ">
    <div class="col-4 text-center">
        <img src="https://picsum.photos/id/1005/128" class="rounded-circle img-thumbnail"/>
        <div class="mt-3">
            <form method="post" enctype="multipart/form-data">
                <div>
                    <input type="file" class="form-control" />
                    <small>Lütfen sadece jpeg, jpg veya png yükleyiniz.</small>
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary btn-sm" type="submit"><i class="fa fa-upload mr-2"></i>Yükle</button>
                </div>
            </form>         
        </div>
    </div>
    <div class="col-4 offset-1">
        <form>
            <div class="mb-3">
                <label for="fullname" class="font-weight-bold">Ad Soyad</label>
                <input type="text" class="form-control" id="fullname">
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Kullanıcı Adı</label>
                <input type="text" class="form-control" id="username">
@*                <div class="form-text">We'll never share your email with anyone else.</div>
*@          </div>
            <div class="mb-3">
                <label for="email" class="form-label">E-Posta Adresi</label>
                <input type="email" class="form-control" id="email">
            </div>
            <div class="mb-3">
                <label for="pass" class="form-label">Şifre</label>
                <input type="password" class="form-control" id="pass">
            </div>
            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save mr-2"></i>Kaydet</button>
        </form>
    </div>
</div>